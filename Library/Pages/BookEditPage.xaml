<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Library.Pages.BookEditPage"
             xmlns:viewmodel="clr-namespace:Library.ViewModels"             
             Title="BookEdit"
             x:DataType="viewmodel:BookViewModel">

    <VerticalStackLayout>
        <Label Text="عنوان"></Label>
        <Entry Text="{Binding Title}" Placeholder="Title"/>
        
        <Label Text="توضیح"></Label>
        <Entry Text="{Binding Description}" Placeholder="Description"/>
        
        <Label Text="ناشر"></Label>
        <Entry Text="{Binding Publisher}" Placeholder="Publisher"/>
        
        <Label Text="نویسنده"></Label>
        <Entry Text="{Binding Author}" Placeholder="Author"/>


<Label Text="تصویر جلد"></Label>
        <Image Source="{Binding CoverImage }" MinimumHeightRequest="100" MinimumWidthRequest="100">
    <Image.GestureRecognizers>
        <TapGestureRecognizer Command="{Binding SelectImageCommand}"
                              NumberOfTapsRequired="1" />
  </Image.GestureRecognizers>
  </Image>

        <Button Text="Save" Command="{Binding SaveCommand}"></Button>
    </VerticalStackLayout>
</ContentPage>