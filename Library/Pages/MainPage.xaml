            <CollectionView ItemsSource="{Binding Books}"
                ItemsLayout="VerticalGrid">
                <CollectionView.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition x:Name="TitleColumn" Width="*" />
                            <ColumnDefinition x:Name="AuthorColumn" Width="*" />
                            <ColumnDefinition x:Name="PublisherColumn" Width="*" />
                            <ColumnDefinition x:Name="TranslatorColumn" Width="*" />
                            <ColumnDefinition x:Name="PriceColumn" Width="*" />
                            <ColumnDefinition x:Name="DescriptionColumn" Width="*" />
                            <ColumnDefinition x:Name="LanguageColumn" Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Text="Title" />
                        <Label Grid.Column="1" Text="Author" />
                        <Label Grid.Column="2" Text="Publisher" />
                        <Label Grid.Column="3" Text="Translator" />
                        <Label Grid.Column="4" Text="Price" />
                        <Label Grid.Column="5" Text="Description" />
                        <Label Grid.Column="6" Text="Language" />
                    </Grid>
                </CollectionView.Header>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="viewmodel:BookViewModel">
                        <Grid Padding="10">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition  />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0" Text="{Binding Title}">
                                <Label.Style>
                                    <Style TargetType="Label">
                                        <Setter Property="Background" Value="Yellow"/>
                                    </Style>
                                </Label.Style>
                            </Label>
                            <Label Grid.Column="1" Text="{Binding Author}" />
                                <Label Grid.Column="2" Text="{Binding Publisher}" />
                                <Label Grid.Column="3" Text="{Binding Translator}" />
                                <Label Grid.Column="4" Text="{Binding Price}" />
                                <Label Grid.Column="5" Text="{Binding Description}" />
                                <Label Grid.Column="6" Text="{Binding Language}" />
                          
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Button Text="{Binding EditButtonText}" Grid.Row="1" MinimumHeightRequest="10" Command="{Binding AddOrEditBookCommand}"></Button>
        </Grid>
    </ScrollView>
</ContentPage>
